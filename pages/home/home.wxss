.home {
  width: 100%;
  height: 100%;
}

/* 头部轮播图 */
.home-swiper {
  width: 100%;
}
.home-swiper .swiper .swiper-item image {
  width: 100%;
  height: 300rpx;
}

/* 中上部分 */
.home-dailyRecom {
  width: 100%;
  height: 180rpx;
  display: flex;
  justify-content: space-around;
  margin-top: 20rpx;
}
.home-dailyRecom .dailyRecom-item {
  text-align: center;
  display: flex;
  flex-direction: column;
}
.home-dailyRecom .dailyRecom-item text:first-child {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #D43BF5;
  font-size: 50rpx;
  color: white;
  line-height: 100rpx;
  margin-bottom: 20rpx;
}

/* 中下部分 */
.home-recommendMusic {
  padding: 0 20rpx;
}
.recommendMusicBtm {
  width: 100%;
  height: 290rpx;
  display: flex;
}
.recommendMusicBtm .recommendMusicBtm-item {
  width: 200rpx;
  height: 100%;
  margin-right: 20rpx;
}

.recommendMusicBtm .recommendMusicBtm-item image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.recommendMusicBtm .recommendMusicBtm-item text {
  font-size: 26rpx;
  width: 200rpx;
  overflow: hidden;
  /*将对象作为弹性伸缩盒子模型显示*/
  display: -webkit-box;
  /*设置子元素排列方式*/
  -webkit-box-orient: vertical;
  /*设置显示的行数，多出的部分会显示为...*/
  -webkit-line-clamp: 2;
}

/* 底部 */
.home-ranking {
  margin-top: 60rpx;
}



